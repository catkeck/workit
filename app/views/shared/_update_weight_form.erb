<%= form_for @weight do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :weight, placeholder: "Add weight" %>
  </div>
  <div class="field">
    <%= f.hidden_field :date, :value => Time.now.strftime("%m/%d/%Y") %>
  </div>
  <%= f.submit "Update Weight", class: "btn" %>  
<% end %>
