
<div class="description">
  <%= form_tag(new_food_path, method: :get) do %>
    <%= text_field_tag :query, nil %>
    <%= submit_tag "Search for food", class: "btn btn-primary"  %>
  <% end %>

  <% if @results %>
    <% @results.each do |result| %>
    <div class="table-responsive">
      <table class="table">
        <tr><th>Name</th><td><%= result["fields"]["item_name"]%></td></tr>
        <tr><th>Brand</th><td><%= result["fields"]["brand_name"] %></td></tr>
        <tr><th>Serving Size</th><td><%= result["fields"]["nf_serving_size_qty"]%> <%=result["fields"]["nf_serving_size_unit"]%></td></tr>
        <tr><th>Ingredients</th><td><%= result["fields"]["nf_ingredient_statement"] %></td></tr>
        <tr><th>Calories</th><td><%= result["fields"]["nf_calories"]%></td></tr>
        <tr><th>Calories from fat</th><td><%= result["fields"]["nf_calories_from_fat"] %></td></tr>
        <tr><th>Total Fat</th><td><%= result["fields"]["nf_total_fat"] %></td></tr>
        <tr><th>Saturated Fat</th><td><%= result["fields"]["nf_saturated_fat"] %></td></tr>
        <tr><th>Cholesterol</th><td><%= result["fields"]["nf_cholesterol"] %></td></tr>
        <tr><th>Sodium</th><td><%= result["fields"]["nf_sodium"] %></td></tr>
        <tr><th>Carbohydrates</th><td><%= result["fields"]["nf_total_carbohydrate"] %></td></tr>
        <tr><th>Dietary Fiber</th><td><%= result["fields"]["nf_dietary_fiber"] %></td></tr>
        <tr><th>Sugars</th><td><%= result["fields"]["nf_sugars"]%></td></tr>
        <tr><th>Protein</th><td><%= result["fields"]["nf_protein"]%></td></tr>
        <tr><th>Vitamin A</th><td><%= result["fields"]["nf_vitamin_a_dv"]%></td></tr>
        <tr><th>Vitamin C</th><td><%= result["fields"]["nf_vitamin_c_dv"]%></td></tr>
        <tr><th>Calcium</th><td><%= result["fields"]["nf_calcium_dv"]%></td></tr>
        <tr><th>Iron</th><td><%= result["fields"]["nf_iron_dv"]%></td></tr>
        <tr><th>Potassium</th><td><%= result["fields"]["nf_potassium"]%></td></tr>
       </table>
      </div>
      <%= form_for @food do |f| %>
        <%= f.hidden_field :item_name, value: result["fields"]["item_name"] %>
        <%= f.hidden_field :calories, value: result["fields"]["nf_calories"] %>
        <%= f.hidden_field :brand_name, value: result["fields"]["brand_name"] %>
        <%= f.hidden_field :item_id, value: result["fields"]["item_id"] %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :date, value: Time.now.to_i%>
        <%= f.hidden_field :description, value: result["fields"]["item_description"]%>
        <%= f.hidden_field :ingredients, value: result["fields"]["nf_ingredient_statement"]%>
        <%= f.hidden_field :calories, value: result["fields"]["nf_calories"]%>
        <%= f.hidden_field :calories_from_fat, value: result["fields"]["nf_calories_from_fat"] %>
        <%= f.hidden_field :total_fat, value: result["fields"]["nf_total_fat"] %>
        <%= f.hidden_field :saturated_fat, value: result["fields"]["nf_saturated_fat"] %>
        <%= f.hidden_field :cholesterol, value: result["fields"]["nf_cholesterol"] %>
        <%= f.hidden_field :sodium, value: result["fields"]["nf_sodium"] %>
        <%= f.hidden_field :carbohydrates, value: result["fields"]["nf_total_carbohydrate"] %>
        <%= f.hidden_field :dietary_fiber, value: result["fields"]["nf_dietary_fiber"] %>
        <%= f.hidden_field :sugars, value: result["fields"]["nf_sugars"]%>
        <%= f.hidden_field :protein, value: result["fields"]["nf_protein"]%>
        <%= f.hidden_field :vitamin_a, value: result["fields"]["nf_vitamin_a_dv"]%>
        <%= f.hidden_field :vitamin_c, value: result["fields"]["nf_vitamin_c_dv"]%>
        <%= f.hidden_field :calcium, value: result["fields"]["nf_calcium_dv"]%>
        <%= f.hidden_field :iron, value: result["fields"]["nf_iron_dv"]%>
        <%= f.hidden_field :potassium, value: result["fields"]["nf_potassium"]%>
        <%= f.hidden_field :serving_size, value: result["fields"]["nf_serving_size_qty"]%>
        <%= f.hidden_field :serving_unit, value: result["fields"]["nf_serving_size_unit"]%>   
        <%= f.number_field :servings, placeholder: "Please enter the amount of servings you had" %>
        <%= f.submit "Add to Today's Food", class: "btn btn-primary" %>
      <%end%>
    <% end %>
  <%end%>
</div>

